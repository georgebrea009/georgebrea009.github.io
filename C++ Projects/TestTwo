#include <iostream>

int addThreeNumbers(int a, int b, int c) {
    return a + b + c;
}

int main() {
    int num1, num2, num3;
    
    std::cout << "Enter three numbers: ";
    std::cin >> num1 >> num2 >> num3;
    
    int total = addThreeNumbers(num1, num2, num3);
    
    std::cout << "The total is: " << total << std::endl;
    
    return 0;
}